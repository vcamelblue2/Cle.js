{
    "name": "new-cle-app",
    "version": "1.0.0",
    "outputFormat": "esmodule",
    "targets": {
        "browser": {
            "source": "src/index.html",
            "distDir": "dist",
            "outputFormat": "esmodule",
            "includeNodeModules": true,
            "optimize": true,
            "sourceMap": true
        }
    },
    "staticFiles": {
        "staticPath": "src/static"
    },
    "scripts": {
        "start": "parcel serve src/index.html -p 4200 --host 127.0.0.1 --open chrome",
        "original-problematic-start": "parcel -p 4200 --host 127.0.0.1",

        "build": "parcel build",
        "test-build": "npx http-server ./dist/browser -p 4200 -c-1"
    },
    "dependencies": {
        "cle.js": "~0.14.10",
        "csz": "^1.2.0"
    },
    "devDependencies": {
        "@parcel/packager-xml": "^2.9.2",
        "@parcel/transformer-inline-string": "^2.9.2",
        "@parcel/transformer-xml": "^2.9.2",
        "parcel": "^2.8.2",
        "parcel-reporter-static-files-copy": "^1.5.0",
        "process": "^0.11.10"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not op_mini all"
    ],
    "babel": {
        "presets": [
            "@babel/preset-env"
        ]
    },
    "terser": {
        "mangle": {
            "reserved": [
                "$"
            ]
        }
    }
}
